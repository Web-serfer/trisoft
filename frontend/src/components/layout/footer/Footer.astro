---
import Logo from '../header/Logo.astro'
import { Icon } from 'astro-icon/components';

const currentYear = new Date().getFullYear()
const companyName = 'ООО «Трисофт»'


const serviceLinks = [
	{ href: '/solutions/development', text: 'Разработка 1С' },
	{ href: '/solutions/implementation', text: 'Внедрение' },
	{ href: '/solutions/support', text: 'Сопровождение' },
	{ href: '/solutions/outsource', text: 'Аутсорс/аутстафф' },
]

const primaryLinks = [
    { href: '/prices', text: 'Цены' },
    { href: '/programmers', text: 'Программисты' },
    { href: '/about', text: 'О компании' }

]

const socialLinks = [
	{ href: 'https://vk.com', label: 'VKontakte', icon: 'vk' },
	{ href: 'https://t.me', label: 'Telegram', icon: 'telegram' },
	{ href: 'mailto:info@trisoft.ru', label: 'Email', icon: 'email' },
]
---

<footer class="bg-gray-900 text-gray-200 pt-12 pb-8">
  <div class="max-w-7xl mx-auto px-4 grid grid-cols-1 md:grid-cols-4 gap-8">

    <!-- About Column -->
    <div class="md:col-span-1">
      <div class="footer-logo-container mb-4">
        <Logo />
      </div>
      <p class="text-sm text-gray-400 leading-relaxed">Ведущий разработчик программного обеспечения и системный интегратор.</p>
    </div>

    <!-- Services Column -->
    <div>
      <h3 class="text-lg font-bold text-white mb-4">Услуги</h3>
      <ul class="space-y-2">
        {serviceLinks.map(link => (
          <li><a href={link.href} class="hover:text-blue-500 transition-colors duration-300">{link.text}</a></li>
        ))}
      </ul>
    </div>

    <!-- Navigation Column -->
    <div>
      <h3 class="text-lg font-bold text-white mb-4">Разное</h3>
      <ul class="space-y-2">
        {primaryLinks.map(link => (
          <li><a href={link.href} class="hover:text-blue-500 transition-colors duration-300">{link.text}</a></li>
        ))}
      </ul>
    </div>

    <!-- Contacts Column -->
    <div>
      <h3 class="text-lg font-bold text-white mb-4">Свяжитесь с нами</h3>
      <div class="flex space-x-4 mb-4">
        {socialLinks.map(social => (
          <a href={social.href} target="_blank" rel="noopener noreferrer" aria-label={social.label} class="text-gray-400 hover:text-blue-500 transition-colors duration-300">
            <Icon name={social.icon} class:list={["w-6 h-6", social.icon === 'telegram' ? 'telegram-icon-fix' : '']} />
          </a>
        ))}
      </div>
      <div class="text-sm">
        <a href="tel:+74951234567" class="hover:text-blue-500 transition-colors duration-300">+7 (495) 123-45-67</a><br/>
        <a href="mailto:info@trisoft.ru" class="hover:text-blue-500 transition-colors duration-300">info@trisoft.ru</a>
      </div>
    </div>

  </div>

  <!-- Bottom Bar -->
  <div class="max-w-7xl mx-auto px-4 mt-8 pt-8 border-t border-gray-800 text-sm text-gray-400">
    <div class="flex flex-col sm:flex-row sm:justify-between items-center gap-4">
      <p class="text-gray-300">&copy; {currentYear} {companyName}. Все права защищены.</p>
      <a href="/privacy-policy" class="hover:text-blue-500 transition-colors duration-300">Политика конфиденциальности</a>
    </div>
  </div>
</footer>

<style>
  .footer-logo-container {
    transform: scale(0.8);
    transform-origin: left;
  }
  .telegram-icon-fix {
    transform: scale(0.9);
  }
</style>