---
import DesktopNav from './DesktopNav.astro';
import MobileMenu from './MobileMenu.tsx';

const navLinks = [
  { href: "/", text: "Главная" },
  { href: "/about", text: "О нас" },
  { href: "/services", text: "Услуги" },
  { href: "/contact", text: "Контакты" },
];
---

<header class="sticky top-0 z-50 w-full border-b border-gray-200 bg-white/80 backdrop-blur-md">
  <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
    <a href="/" class="text-2xl font-bold text-gray-900">
      MyLogo
    </a>

    <div class="hidden items-center gap-6 md:flex">
      <DesktopNav navLinks={navLinks} />
      <a
          href="/get-started"
          class="rounded-md bg-indigo-600 px-4 py-2 text-sm font-medium text-white transition-colors duration-200 hover:bg-indigo-700"
      >
        Начать
      </a>
    </div>

    <div class="md:hidden">
      <MobileMenu navLinks={navLinks} client:visible />
    </div>

  </div>
</header>