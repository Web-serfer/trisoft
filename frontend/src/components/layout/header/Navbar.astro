---
import { menus } from './navData.ts';
---

<nav class="flex items-center gap-x-4">
  {menus.map((menu) => (
    <div class="relative group">
      {menu.children ? (
        <>
          <a
            href={menu.url}
            class="flex items-center gap-x-1 px-3 py-2 font-medium tracking-wide text-gray-600 duration-200 ease-out hover:text-cyan-600"
          >
            {menu.name}
            <svg class="w-4 h-4 fill-current transform transition-transform duration-300 group-hover:rotate-180" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
              <path d="M10 14l-5-5h10z" />
            </svg>
          </a>
          <div class="absolute left-0 mt-2 w-56 bg-white rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform translate-y-2 group-hover:translate-y-0">
            <div class="py-1">
              {menu.children.map((child) => (
                <a
                  href={child.url}
                  class="block px-4 py-2 text-sm text-gray-600 hover:bg-gray-100 hover:text-cyan-600"
                >
                  {child.name}
                </a>
              ))}
            </div>
          </div>
        </>
      ) : (
        <a
          href={menu.url}
          class="group relative flex items-center justify-center w-full px-3 py-2 font-medium tracking-wide text-center duration-200 ease-out sm:py-0 sm:mb-0 md:w-auto text-gray-600 hover:text-cyan-600"
        >
          {menu.name}
          <span class="absolute bottom-0 left-1/2 w-0 h-0.5 bg-cyan-600 transition-all duration-300 ease-out group-hover:w-full group-hover:left-0"></span>
        </a>
      )}
    </div>
  ))}
</nav>

<style>
  a.active {
    color: #0891B2; /* cyan-600 */
  }
</style>
