---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="text-center mb-16">
  <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4" set:html={title}></h2>
  <p class="text-lg text-gray-600 max-w-3xl mx-auto" set:html={description}></p>
</div>
