---
import type { Programmer } from './prices-data';
import Button from '@components/base/Button.astro';

export interface Props {
  programmer: Programmer;
}

const { programmer } = Astro.props;
---

<div class="flex h-full flex-col rounded-2xl border border-gray-200 bg-white p-6 shadow-lg transition-transform duration-300 hover:-translate-y-1 hover:shadow-2xl">
  
  <!-- Icon and Title -->
  <div class="text-center">
    <!-- TODO: Replace with actual icon component -->
    <div class="mb-4 text-gray-400 text-sm">{programmer.icon}</div> 
    <h2 class="text-xl font-bold text-gray-900">{programmer.title}</h2>
    <p class="mt-1 text-sm text-gray-500">{programmer.experience}</p>
  </div>

  <hr class="my-4 border-gray-200" />

  <!-- Description -->
  <div class="flex-grow">
    <p class="text-sm text-gray-600 leading-relaxed">{programmer.description}</p>
  </div>

  <hr class="my-4 border-gray-200" />

  <!-- Price -->
  <div class="text-center">
    <p class="text-2xl font-bold text-gray-900">{programmer.price}</p>
  </div>

  <!-- CTA Button -->
  <div class="mt-6">
    <Button href={programmer.cta.link} text={programmer.cta.text} variant="primary" class="w-full" />
  </div>
</div>
