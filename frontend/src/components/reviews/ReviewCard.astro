---
import { Image } from 'astro:assets';

export interface Props {
    review: {
        name: string;
        company: string;
        avatar: ImageMetadata;
        text: string;
    };
}

const { review } = Astro.props;

function getInitials(name: string): string {
    const names = name.split(' ').filter(n => n.length > 0);
    if (names.length >= 2) {
        return (names[0][0] + names[names.length - 1][0]).toUpperCase();
    }
    return name.substring(0, 2).toUpperCase();
}

const initials = getInitials(review.name);
---

<div class="review-card group relative bg-gradient-to-br from-white/40 to-white/10 rounded-3xl border border-white/30 shadow-lg overflow-hidden transition-all duration-500 hover:shadow-xl hover:-translate-y-1 h-full flex flex-col backdrop-blur-xl">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 to-indigo-100/50 -z-10"></div>

    <div class="p-6 flex-grow">
        <!-- Блок с настоящим обтеканием -->
        <div class="review-text-wrapper mb-6">
            <!-- Инициалы с float и shape-outside -->
            <div class="review-initials float-left mr-4 mb-2">
                <div class="w-16 h-16 rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 flex items-center justify-center text-white text-xl font-bold shadow-lg group-hover:scale-110 transition-transform duration-300">
                    {initials}
                </div>
            </div>

            <!-- Текст, который ОБТЕКАЕТ инициалы -->
            <p class="text-gray-800 leading-relaxed text-base md:text-lg font-medium">
                “{review.text}”
            </p>
        </div>
    </div>

    <div class="p-5 pt-2">
        <div class="flex items-center bg-white/40 rounded-full p-3 border border-white/30 backdrop-blur-sm w-full transition-all duration-300 group-hover:bg-white/50">
            <Image
                    src={review.avatar}
                    alt={review.name}
                    width={48}
                    height={48}
                    class="w-12 h-12 rounded-full object-cover border-2 border-white/70 shadow-sm transition-transform duration-300 group-hover:scale-110"
            />
            <div class="ml-4">
                <h4 class="text-md font-bold text-gray-900">{review.name}</h4>
                <p class="text-xs text-gray-600 font-medium">{review.company}</p>
            </div>
        </div>
    </div>
</div>

<style>
    .review-card {
        backdrop-filter: blur(16px);
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }
    .review-card:hover {
        transform: translateY(-6px) scale(1.02);
        box-shadow: 0 24px 48px rgba(31, 41, 55, 0.15), 0 0 20px rgba(99, 102, 241, 0.1);
    }

    /* НАСТОЯЩЕЕ ОБТЕКАНИЕ */
    .review-initials {
        shape-outside: circle(50% at 50% 50%);
        -webkit-shape-outside: circle(50% at 50% 50%);
    }

    .review-text-wrapper p {
        hyphens: auto;
        word-wrap: break-word;
        text-align: justify;
    }

    /* Адаптив: на мобильных убираем обтекание */
    @media (max-width: 768px) {
        .review-initials {
            float: none;
            margin: 0 auto 1rem auto;
            shape-outside: none;
        }
        .review-text-wrapper p {
            text-align: left;
        }
    }
</style>