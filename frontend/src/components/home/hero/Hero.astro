---
import Button from '@components/base/Button.astro';

// Определяем данные для преимуществ
const benefits = [
  {
    id: 1,
    bgFrom: "from-blue-500/5",
    bgTo: "to-indigo-500/5",
    border: "border-blue-200/30",
    gradientFrom: "from-blue-500",
    gradientTo: "to-indigo-600",
    shadow: "shadow-blue-500/40",
    glow: "shadow-blue-500/20",
    hoverColor: "blue",
    icon: `<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
    </svg>`,
    title: "Полная автоматизация",
    description: "Учет финансов, склада, продаж и персонала"
  },
  {
    id: 2,
    bgFrom: "from-cyan-500/5",
    bgTo: "to-teal-500/5",
    border: "border-cyan-200/30",
    gradientFrom: "from-cyan-500",
    gradientTo: "to-teal-600",
    shadow: "shadow-cyan-500/40",
    glow: "shadow-cyan-500/20",
    hoverColor: "cyan",
    icon: `<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0"></path>
    </svg>`,
    title: "Интеграция систем",
    description: "CRM, сайты, онлайн-кассы и банковские сервисы"
  },
  {
    id: 3,
    bgFrom: "from-rose-500/5",
    bgTo: "to-pink-500/5",
    border: "border-rose-200/30",
    gradientFrom: "from-rose-500",
    gradientTo: "to-pink-600",
    shadow: "shadow-rose-500/40",
    glow: "shadow-rose-500/20",
    hoverColor: "rose",
    icon: `<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>`,
    title: "Техподдержка 24/7",
    description: "Быстрое реагирование и консультации специалистов"
  }
];
---

<section class="relative overflow-hidden bg-white py-20 sm:py-28">
  <div aria-hidden="true" class="absolute inset-0 -z-10 overflow-hidden">
    <div class="blob1 absolute top-0 -left-1/4 h-[40rem] w-[40rem] rounded-full bg-blue-200/20 blur-3xl transition-all duration-2000 ease-out"></div>
    <div class="blob2 absolute -bottom-1/4 right-0 h-[50rem] w-[50rem] rounded-full bg-cyan-200/20 blur-3xl transition-all duration-2000 ease-out"></div>
    <div class="blob3 absolute bottom-1/4 left-1/4 h-[30rem] w-[30rem] rounded-full bg-indigo-200/10 blur-3xl transition-all duration-2000 ease-out"></div>
  </div>

  <div class="relative max-w-6xl mx-auto px-6 lg:px-8 text-center">
    <!-- Строка с тегом и анимированной точкой -->
    <div class="inline-flex items-center px-4 py-2 bg-blue-500/10 rounded-full border border-blue-200 mb-8 backdrop-blur-sm transition-all duration-500 ease-out">
      <span class="relative flex h-2 w-2 mr-3">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-500 opacity-75 transition-all duration-1500 ease-in-out"></span>
        <span class="relative inline-flex rounded-full h-2 w-2 bg-blue-500 transition-all duration-500 ease-out"></span>
      </span>
      <span class="text-blue-700 font-medium text-sm transition-all duration-500 ease-out">Автоматизация бизнеса с 1С</span>
    </div>

    <!-- Главный заголовок -->
    <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-gray-900 leading-tight mb-6 transition-all duration-700 ease-out">
      <span class="block">Автоматизация</span>
      <span class="block">процессов вашего бизнеса</span>
      <span class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600">«под ключ»</span>
    </h1>

    <!-- Подзаголовок -->
    <p class="text-lg sm:text-xl text-gray-600 mb-16 max-w-3xl mx-auto leading-relaxed transition-all duration-700 ease-out">
      Комплексные решения на базе 1С для оптимизации вашего бизнеса.
      Повышайте эффективность, снижайте издержки и фокусируйтесь на развитии.
    </p>

    <!-- Уникальные карточки преимуществ -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      {benefits.map((benefit) => (
          <div class={`group relative bg-gradient-to-br ${benefit.bgFrom} ${benefit.bgTo} border ${benefit.border} rounded-3xl p-8 transition-all duration-1000 ease-out hover:-translate-y-1 backdrop-blur-sm overflow-hidden`}>
            <!-- Эффект свечения с цветом карточки -->
            <div class={`absolute inset-0 ${benefit.glow} opacity-0 group-hover:opacity-100 transition-all duration-1000 ease-out rounded-3xl`}></div>

            <!-- Верхний декоративный элемент с цветом при наведении -->
            <div class={`absolute -top-4 -right-4 w-24 h-24 bg-gradient-to-br from-${benefit.hoverColor}-500/10 to-transparent rounded-full blur-xl group-hover:from-${benefit.hoverColor}-500/30 group-hover:scale-110 transition-all duration-1000 ease-out`}></div>

            <div class="relative z-10">
              <div class="flex justify-center items-center mb-6">
                <div class={`relative w-20 h-20 bg-gradient-to-br ${benefit.gradientFrom} ${benefit.gradientTo} rounded-2xl flex items-center justify-center shadow-xl group-hover:${benefit.shadow} transition-all duration-700 ease-out group-hover:scale-105`}>
                  <div class="absolute inset-0 bg-white/10 rounded-2xl transition-all duration-700 ease-out"></div>
                  <div class="relative transition-all duration-700 ease-out flex items-center justify-center">
                    <Fragment set:html={benefit.icon} />
                  </div>
                </div>
              </div>

              <h3 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-blue-600 group-hover:to-indigo-600 transition-all duration-700 ease-out">
                {benefit.title}
              </h3>

              <p class="text-gray-600 leading-relaxed text-lg group-hover:text-gray-700 transition-all duration-700 ease-out">
                {benefit.description}
              </p>
            </div>
          </div>
      ))}
    </div>

    <!-- Кнопки с более плавными анимациями -->
    <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
      <Button href="#" text="Заказать консультацию" variant="primary" size="large" />
      <Button href="#" text="Смотреть кейсы" variant="secondary" size="large" />
    </div>
  </div>
</section>

<style>
    /* Плавные easing функции */
    .ease-out {
        transition-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .ease-in-out {
        transition-timing-function: cubic-bezier(0.42, 0, 0.58, 1);
    }

    /* Убираем резкие движения */
    .group:hover .group-hover\:scale-105 {
        transform: scale(1.05);
    }

    .group:hover .group-hover\:scale-110 {
        transform: scale(1.1);
    }

    .group:hover .group-hover\:-translate-y-1 {
        transform: translateY(-0.25rem);
    }

    /* Плавные тени для кнопок */
    .shadow-lg {
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1),
        0 4px 6px -2px rgba(0, 0, 0, 0.05);
        transition: box-shadow 1s cubic-bezier(0.25, 0.46, 0.45, 0.94),
        transform 1s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .shadow-xl {
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1),
        0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    /* Плавное появление свечения */
    .group-hover\:opacity-100 {
        transition: opacity 1s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    /* Фикс для центрирования иконок */
    .flex.items-center.justify-center {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Плавные градиенты для кнопок */
    .bg-gradient-to-r {
        transition: background-image 1s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }
</style>
