---
import Button from '@components/base/Button.astro';

const benefits = [
  {
    id: 1,
    bgGradient: "bg-gradient-to-br from-blue-500/5 to-indigo-500/5",
    border: "border-blue-200/30",
    iconGradient: "bg-gradient-to-br from-blue-500 to-indigo-600",
    iconShadow: "group-hover:shadow-blue-500/40",
    glow: "shadow-blue-500/20",
    hoverDecorator: "group-hover:from-blue-500/30",
    icon: `<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>`,
    title: "Полная автоматизация",
    description: "Учет финансов, склада, продаж и персонала"
  },
  {
    id: 2,
    bgGradient: "bg-gradient-to-br from-cyan-500/5 to-teal-500/5",
    border: "border-cyan-200/30",
    iconGradient: "bg-gradient-to-br from-cyan-500 to-teal-600",
    iconShadow: "group-hover:shadow-cyan-500/40",
    glow: "shadow-cyan-500/20",
    hoverDecorator: "group-hover:from-cyan-500/30",
    icon: `<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0"></path></svg>`,
    title: "Интеграция систем",
    description: "CRM, сайты, онлайн-кассы и банковские сервисы"
  },
  {
    id: 3,
    bgGradient: "bg-gradient-to-br from-rose-500/5 to-pink-500/5",
    border: "border-rose-200/30",
    iconGradient: "bg-gradient-to-br from-rose-500 to-pink-600",
    iconShadow: "group-hover:shadow-rose-500/40",
    glow: "shadow-rose-500/20",
    hoverDecorator: "group-hover:from-rose-500/30",
    icon: `<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
    title: "Техподдержка 24/7",
    description: "Быстрое реагирование и консультации специалистов"
  }
];
---
<section class="relative overflow-hidden bg-white py-20 sm:py-28">
  <div class="relative mx-auto max-w-6xl px-6 text-center lg:px-8">

    <h1 class="text-4xl font-bold leading-tight text-gray-900 sm:text-5xl md:text-6xl">
      <span class="block">Автоматизация процессов</span>
      <span class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600">вашего бизнеса «под ключ»</span>
    </h1>

    <div class="mx-auto mt-16 grid max-w-none grid-cols-1 gap-8 md:grid-cols-3">
      {benefits.map((benefit) => (
          <div
              class:list={["group relative overflow-hidden rounded-3xl p-8 backdrop-blur-sm transition-all duration-1000 ease-out hover:-translate-y-1", benefit.bgGradient, benefit.border]}>
            <div
                class:list={["absolute inset-0 rounded-3xl opacity-0 transition-all duration-1000 ease-out group-hover:opacity-100", benefit.glow]}></div>
            <div class="relative z-10">
              <div class="mb-6 flex items-center justify-center">
                <div
                    class:list={["relative flex h-20 w-20 items-center justify-center rounded-2xl shadow-xl transition-all duration-700 ease-out group-hover:scale-105", benefit.iconGradient, benefit.iconShadow]}>
                  <div class="absolute inset-0 rounded-2xl bg-white/10"></div>
                  <div class="relative">
                    <Fragment set:html={benefit.icon}/>
                  </div>
                </div>
              </div>
              <h3 class="mb-4 text-2xl font-bold text-gray-900 transition-all duration-700 ease-out group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-blue-600 group-hover:to-indigo-600">{benefit.title}</h3>
              <p class="text-lg leading-relaxed text-gray-600 transition-all duration-700 ease-out group-hover:text-gray-700">{benefit.description}</p>
            </div>
          </div>
      ))}
    </div>

    <div class="mt-16 flex flex-col items-center justify-center gap-6 sm:flex-row">
      <Button id="hero-callback-button" href="#" text="Заказать консультацию" variant="primary" size="large"/>
      <Button href="/cases" text="Смотреть кейсы" variant="secondary" size="large"/>
    </div>
  </div>
</section>

<!-- Этот скрипт гарантированно сработает, так как он находится в одном файле с кнопкой -->
<script>
  const openButton = document.getElementById('hero-callback-button');
  const modal = document.getElementById('callback-modal') as HTMLDialogElement | null;
  const closeButton = document.getElementById('modal-close-button');

  if (openButton && modal && closeButton) {
    openButton.addEventListener('click', (event) => {
      event.preventDefault();
      modal.showModal();
    });
    closeButton.addEventListener('click', () => modal.close());
    modal.addEventListener('click', (event) => {
      if (event.target === modal) modal.close();
    });
  } else {
    console.error('Modal trigger elements not found!');
  }
</script>