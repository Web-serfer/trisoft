---
// src/components/hero/HeroStatsCard.astro
---
<div class="relative anim-scale-in">
  <!-- Сама карточка -->
  <div class="bg-gradient-to-br from-slate-800/80 to-slate-900/80 backdrop-blur-xl rounded-2xl p-8 border border-slate-700/50 shadow-2xl">
    <div class="text-center mb-8">
      <!-- Контент внутри карточки тоже анимируем -->
      <div class="inline-flex items-center justify-center w-16 h-16 bg-cyan-500/10 rounded-2xl mb-4 anim-fade-in-up animation-delay-300">
        <svg class="w-8 h-8 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>
      </div>
      <h3 class="text-2xl font-bold text-white anim-fade-in-up animation-delay-400">Наши достижения</h3>
    </div>

    <!-- Метрики -->
    <div class="space-y-6">
      <div class="relative anim-fade-in-up animation-delay-500">
        <div class="flex justify-between text-sm mb-2">
          <span class="text-slate-300">Автоматизированных компаний</span>
          <span class="text-cyan-400 font-bold">500+</span>
        </div>
        <div class="h-2 bg-slate-700 rounded-full overflow-hidden">
          <div class="h-full bg-gradient-to-r from-cyan-500 to-blue-500 rounded-full w-4/5 anim-fill-bar"></div>
        </div>
      </div>
      <div class="relative anim-fade-in-up animation-delay-700">
        <div class="flex justify-between text-sm mb-2">
          <span class="text-slate-300">Время внедрения</span>
          <span class="text-cyan-400 font-bold">От 2 недель</span>
        </div>
        <div class="h-2 bg-slate-700 rounded-full overflow-hidden">
          <div class="h-full bg-gradient-to-r from-cyan-500 to-blue-500 rounded-full w-3/4 anim-fill-bar"></div>
        </div>
      </div>
      <div class="relative anim-fade-in-up animation-delay-900">
        <div class="flex justify-between text-sm mb-2">
          <span class="text-slate-300">Удовлетворённых клиентов</span>
          <span class="text-cyan-400 font-bold">98%</span>
        </div>
        <div class="h-2 bg-slate-700 rounded-full overflow-hidden">
          <div class="h-full bg-gradient-to-r from-cyan-500 to-blue-500 rounded-full w-5/6 anim-fill-bar"></div>
        </div>
      </div>
    </div>

    <!-- Футер карточки -->
    <div class="mt-8 pt-6 border-t border-slate-700/50">
      <div class="flex items-center justify-center">
        <div class="flex -space-x-2">
          <div class="anim-pop-in animation-delay-1100 w-10 h-10 bg-gradient-to-br from-cyan-400 to-blue-500 rounded-full flex items-center justify-center text-white font-bold text-sm">1С</div>
          <div class="anim-pop-in animation-delay-1200 w-10 h-10 bg-gradient-to-br from-indigo-400 to-purple-500 rounded-full flex items-center justify-center text-white font-bold text-sm">ERP</div>
          <div class="anim-pop-in animation-delay-1300 w-10 h-10 bg-gradient-to-br from-green-400 to-teal-500 rounded-full flex items-center justify-center text-white font-bold text-sm">CRM</div>
        </div>
        <div class="ml-4 text-slate-400 text-sm anim-fade-in-up animation-delay-1400">
          +15 решений<br/>для бизнеса
        </div>
      </div>
    </div>
  </div>

  <!-- Декоративные элементы -->
  <div class="absolute -top-2 -right-2 w-24 h-24 bg-cyan-500/10 rounded-full blur-xl"></div>
  <div class="absolute -bottom-2 -left-2 w-32 h-32 bg-blue-500/10 rounded-full blur-xl"></div>
</div>

<style>
    /* Анимация появления с увеличением */
    @keyframes scaleIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    /* Анимация появления "из-под земли" */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Анимация заполнения прогресс-бара */
    @keyframes fillBar {
        from {
            width: 0%;
        }
    }

    /* Анимация "выпрыгивания" */
    @keyframes popIn {
        from {
            opacity: 0;
            transform: scale(0.5);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    /* Базовые классы для применения анимаций */
    .anim-scale-in {
        opacity: 0;
        animation: scaleIn 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
        animation-delay: 0.2s; /* Карточка появляется чуть позже основного текста */
    }

    .anim-fade-in-up {
        opacity: 0;
        animation: fadeInUp 0.5s ease-out forwards;
    }

    .anim-fill-bar {
        animation: fillBar 1s cubic-bezier(0.25, 1, 0.5, 1) forwards;
        /* Задержка наследуется от родителя */
        animation-delay: inherit;
    }

    .anim-pop-in {
        opacity: 0;
        animation: popIn 0.4s cubic-bezier(0.68, -0.55, 0.27, 1.55) forwards;
    }

    /* Утилиты для задержки */
    .animation-delay-300 { animation-delay: 0.3s; }
    .animation-delay-400 { animation-delay: 0.4s; }
    .animation-delay-500 { animation-delay: 0.5s; }
    .animation-delay-700 { animation-delay: 0.7s; }
    .animation-delay-900 { animation-delay: 0.9s; }
    .animation-delay-1100 { animation-delay: 1.1s; }
    .animation-delay-1200 { animation-delay: 1.2s; }
    .animation-delay-1300 { animation-delay: 1.3s; }
    .animation-delay-1400 { animation-delay: 1.4s; }
</style>
