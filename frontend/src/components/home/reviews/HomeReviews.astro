---
import SectionHeader from '@components/base/SectionHeader.astro'
import { reviews } from '@components/reviews/reviews'
import ReviewCard from '@components/reviews/ReviewCard.astro'
import Button from '@components/base/Button.astro'

const lastThreeReviews = reviews.slice(-3)
---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <SectionHeader
      title="Нам доверяют"
      description="Мы гордимся своей работой и ценим каждого клиента. Вот что они говорят о нас."
    />
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {lastThreeReviews.map(review => <ReviewCard review={review} />)}
    </div>
    <div class="text-center mt-16">
      <a href="/reviews"
         class="inline-flex items-center justify-center h-14 px-8 bg-white text-blue-700 font-semibold rounded-full border border-blue-200 hover:bg-blue-100 transition-all duration-300 transform hover:-translate-y-1 shadow-sm">
        Смотреть все отзывы
      </a>
    </div>
  </div>
</section>
