---
import Layout from '@layouts/Layout.astro'
import SectionHeader from '@components/base/SectionHeader.astro'
import CaseCard from '@components/cases/CaseCard.astro'
import { cases } from '@components/cases/cases-data.ts'

const pageTitle = 'Кейсы'
const pageDescription =
	'Ознакомьтесь с нашими успешными проектами по автоматизации бизнеса на базе 1С. Мы решаем сложные задачи и достигаем реальных результатов.'
---

<Layout title={pageTitle} description={pageDescription}>
	<div class="relative bg-gray-50 py-16 sm:py-24">
		<!-- Декоративные элементы -->
		<div
			class="absolute right-0 top-0 h-96 w-96 animate-pulse rounded-full bg-blue-200/20 blur-3xl"
		></div>
		<div
			class="absolute bottom-0 left-0 h-96 w-96 animate-pulse rounded-full bg-indigo-200/20 blur-3xl"
		></div>

		<div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<SectionHeader
				title="Наши успешные проекты"
				description="Мы гордимся каждым проектом и стремимся к максимальной эффективности для наших клиентов. Здесь представлены некоторые из наших лучших работ по внедрению и доработке 1С."
			/>

			<div
				class="mt-12 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3"
			>
				{cases.map(caseItem => <CaseCard caseItem={caseItem} />)}
			</div>
		</div>
	</div>
</Layout>